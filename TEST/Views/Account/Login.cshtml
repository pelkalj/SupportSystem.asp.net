@using TEST.Models
@model LoginViewModel
@{
    ViewBag.Title = "Log in";
    Layout = null;
    @Styles.Render("~/Content/css")


}

<div class="container">
    <section id="loginForm">
        @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
        {
            @Html.AntiForgeryToken()

            <hr />
            <div class="col-lg-4 col-md-3 col-sm-2"></div>
            <div class="col-lg-4 col-md-6 col-sm-8">

                <div class="row loginbox">
                    <span class="singtext">Sign in </span>
                    <div class="col-lg-12">

                    </div>
                    <div class="col-lg-12 col-md-12 col-sm-12">
                        Enter your e-mail:
                        @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                    </div>
                    <div class="col-lg-12  col-md-12 col-sm-12">
                        Enter your password:
                        @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                        @*<input class="form-control" type="password" placeholder="Please enter password">*@
                    </div>
                    <div class="col-lg-12  col-md-12 col-sm-12">
                        <input type="submit" value="Log in" class="submitButton" />
                    </div>

                  
                    <br>
                    <p>
                       
                        @Html.ActionLink("Register as a new user", "Register")
                    </p>

                </div>
               

                <br>
                <br>
                <footer class="footer">
                    <a href='#'>Terms of use</a> | 
                    <a href='#'>Privacy Policy</a> | 
                    <a href='#'>Contact us</a> | 
                    <a href='#'>Feedback</a>
                    <p>©2016   Company All rights reserved </p>
                </footer> <!--footer Section ends-->
            </div>
         }
            <div class="col-lg-4 col-md-3 col-sm-2"></div>
    </section>
</div>
  
