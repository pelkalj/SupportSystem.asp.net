<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - System Support</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

  

</head>

<body>

    <div class="row">
        <div class="col-sm-10">
            @Html.Partial("_LoginPartial")
        </div>

        <div class="col-sm-1">

        </div>
    </div>


    <div class="row" style="font-size:18px">
        <div class="col-sm-2">
            <div class="container">
                <nav class="navbar bg-white">
                    <ul class="nav flex-column">
                        <li class="nav-item">@Html.ActionLink("Home", "Index", "Home")</li>
                        <li class="nav-item">@Html.ActionLink("Admin Section", "Index", "AdminSection")</li>
                        <li class="nav-item">@Html.ActionLink("User Managment", "Index", "StartUpHome")</li>
                        <li class="nav-item">@Html.ActionLink("System Selection", "Index", "SystemSelection")</li>
                        <li class="nav-item">@Html.ActionLink("Support Statuses", "Index", "SupportStatuses")</li>
                    </ul>
                </nav>
            </div>
        </div>


        <div class="col-sm-10">
            <div class="container body-content">
                @RenderBody()

            </div>

            <hr />
        </div>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)

   

</body>
</html>
